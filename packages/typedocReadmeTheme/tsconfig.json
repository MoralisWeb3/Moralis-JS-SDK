{
  "extends": "../../tsconfig.package.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist/",
    "rootDir": "./src",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": [
    "./dist",
    "./test",
    "**/*.spec.ts"
  ],
  "include": [
    "**/*"
  ]
}