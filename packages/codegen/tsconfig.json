{
  "extends": "../../tsconfig.package.json",
  "compilerOptions": {
    "outDir": "./lib",
    "declarationDir": "./lib/",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2022",
    "moduleResolution": "Node",
    "target": "es6",
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "include": ["src/**/*"]
}
